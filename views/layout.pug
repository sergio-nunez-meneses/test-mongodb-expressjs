  body

    header
      nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
        a(class="navbar-brand" href="/")
          button(class="btn btn-lg bg-dark text-white" type="button") Home
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        
        div(id="navbarNav" class="collapse navbar-collapse")
          if title === 'Actions'
            ul(class="navbar-nav ml-auto")
              li(class="nav-items")
                a(class="nav-link btn btn-lg bg-dark text-white" href="/database") Actions
          if title !== 'Index'
            ul(class="navbar-nav")
              li(class="nav-items")
                a(class="nav-link btn btn-lg bg-dark text-white" href="/disconnect") Delete &amp; Disconnect
    
    block content
      
