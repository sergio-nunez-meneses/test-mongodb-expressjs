extends layout

block content
  
  main
    div(class="container border my-3")

      div(class="container")
        if action == 'deleteone'
          div(class="alert alert-success mt-3 pt-3 px-3 alert-dismissible fade show")
            p(class="my-auto lead") Database #[em #{name}] successfully...
            button(type="button" class="close" data-dismiss="alert") &times;
      
      div(class="container text-justify")
        table(class="table table-striped table-hover table-bordered my-3")
          thead(class="bg-primary text-white text-left")
            tr
              th(scope="col") Id
              th(scope="col") Sentence
          tbody(class="")
            for document in documents
              tr
                td(class="text-center") #{document._id}
                td(class="") #{document.sentence}
            
